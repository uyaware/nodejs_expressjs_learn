{
  "name": "nodejs",
  "version": "1.0.0",
  "description": "learn nodejs",
  "homepage": "https://github.com/uyaware/nodejs_expressjs_learn#readme",
  "bugs": {
    "url": "https://github.com/uyaware/nodejs_expressjs_learn/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uyaware/nodejs_expressjs_learn.git"
  },
  "license": "ISC",
  "author": "uy",
  "type": "commonjs",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon",
    "start": "tsc && node dist/app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:debug": "nodemon --inspect=9229 -e ts,tsx --exec node -r ts-node/register -r tsconfig-paths/register ./src/app.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.3.0",
    "dotenv": "16.4.7",
    "ejs": "3.1.10",
    "express": "^5.2.1",
    "mysql2": "3.16.2"
  },
  "devDependencies": {
    "@types/ejs": "3.1.5",
    "@types/express": "5.0.0",
    "@types/node": "22.10.7",
    "nodemon": "3.1.9",
    "prisma": "6.3.0",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "node_modules"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src/app.ts"
  }
}
